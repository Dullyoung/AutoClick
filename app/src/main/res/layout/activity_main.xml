<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="#FB0047"
            android:textSize="16dp"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_desp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="#222222"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_state" />


        <Button
            android:id="@+id/btn_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="开关无障碍"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/tv_desp" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="去完成"
            app:layout_constraintStart_toStartOf="@id/btn_permission"
            app:layout_constraintTop_toBottomOf="@id/btn_permission" />

        <Button
            android:id="@+id/btn_start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="去浏览"
            app:layout_constraintStart_toStartOf="@id/btn_permission"
            app:layout_constraintTop_toBottomOf="@id/btn_start" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="去搜索"
            app:layout_constraintStart_toStartOf="@id/btn_permission"
            app:layout_constraintTop_toBottomOf="@id/btn_start2" />


        <LinearLayout
            android:id="@+id/ll_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btn_close">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/alipay" />

            <TextView
                android:id="@+id/tv_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="好活，当赏！(随意~)"
                android:textColor="#29B3FC"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_chat"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/ll_pay">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qq" />

            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="有问题联系我~"
                android:textColor="#29B3FC"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/ll_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff9b27"
            android:textSize="18dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/ps_android_qq"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>